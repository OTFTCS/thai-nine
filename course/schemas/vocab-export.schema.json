{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://thai-nine.local/schemas/vocab-export.schema.json",
  "title": "Global Vocab Export",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "generatedAt", "source", "lessons", "cards"],
  "properties": {
    "schemaVersion": { "const": 1 },
    "generatedAt": { "type": "string", "minLength": 1 },
    "source": { "const": "pipeline-cli" },
    "lessons": { "type": "array", "items": { "type": "string", "pattern": "^M\\d{2}-L\\d{3}$" } },
    "cards": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "vocabId", "thai", "translit", "english", "lessonId", "tags"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "vocabId": { "type": "string", "pattern": "^v-[a-f0-9]{10}$" },
          "thai": { "type": "string", "minLength": 1 },
          "translit": { "type": "string", "minLength": 1 },
          "english": { "type": "string", "minLength": 1 },
          "lessonId": { "type": "string", "pattern": "^M\\d{2}-L\\d{3}$" },
          "tags": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } }
        }
      }
    }
  }
}
