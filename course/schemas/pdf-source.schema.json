{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://thai-nine.local/schemas/pdf-source.schema.json",
  "title": "PDF Source",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "lessonId", "title", "sections", "drills", "answerKey"],
  "properties": {
    "schemaVersion": { "const": 1 },
    "lessonId": { "type": "string", "pattern": "^M\\d{2}-L\\d{3}$" },
    "title": { "type": "string", "minLength": 1 },
    "sections": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["heading", "body"],
        "properties": {
          "heading": { "type": "string", "minLength": 1 },
          "body": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } }
        }
      }
    },
    "drills": { "type": "array", "minItems": 3, "items": { "type": "string", "minLength": 1 } },
    "answerKey": { "type": "array", "minItems": 3, "items": { "type": "string", "minLength": 1 } }
  }
}
