{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://thai-nine.local/schemas/flashcards.schema.json",
  "title": "Flashcards Deck",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "lessonId", "cards"],
  "properties": {
    "schemaVersion": { "const": 1 },
    "lessonId": { "type": "string", "pattern": "^M\\d{2}-L\\d{3}$" },
    "cards": {
      "type": "array",
      "minItems": 5,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "vocabId", "front", "back", "translit", "tags"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "vocabId": { "type": "string", "pattern": "^v-[a-f0-9]{10}$" },
          "front": { "type": "string", "minLength": 1 },
          "back": { "type": "string", "minLength": 1 },
          "translit": { "type": "string", "minLength": 1 },
          "tags": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } }
        }
      }
    }
  }
}
